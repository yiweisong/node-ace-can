{
  "name": "ace-can",
  "version": "0.1.0",
  "description": "A python-can like CAN bus library for Node.js (busmust/pcan)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "gypfile": true,
  "scripts": {
    "install": "node-gyp-build",
    "build": "npm run build:native && npm run build:ts",
    "build:native": "node-gyp rebuild",
    "build:ts": "tsc -p tsconfig.json",
    "prebuildify": "prebuildify --napi --strip",
    "rebuild": "node-gyp rebuild",
    "pretest": "npm run build:ts",
    "test": "node --test test/**/*.test.cjs"
  },
  "keywords": [
    "can",
    "bus",
    "node-addon-api",
    "native",
    "busmust",
    "pcan"
  ],
  "author": "Song Yiwei",
  "license": "MIT",
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp-build": "^4.8.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "node-gyp": "^10.0.0",
    "prebuildify": "^6.0.1",
    "typescript": "^5.4.0"
  }
}
